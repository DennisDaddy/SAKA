
<% provide(:title, "Edit project") %>
<section id="registration" class="container">
   <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
              <div class="panel-body">
                  <h3 class="thin text-center">Edit Fundraise</h3>
                  <p class="text-center text-muted">Moments of joy can be spontatious  </p>
                  <hr>

			<%= form_for(@project) do |f| %>

					<%= render 'shared/error_messages', object: f.object %>
					<div class="field">

		              <div class="top-margin">
						<%= f.label :title %>
				   	    <%= f.text_field :title, class: 'form-control' %>
			   	    </div>

			   	    <div class="top-margin">
					        <%= f.label :project_goal %><span class="text-danger">*</span>
					        <%= f.text_field :project_goal, class: 'form-control' %>       
					    </div>
		            
		             <div class="top-margin">
		             <%= f.label :content %>
					<%= f.text_area :content, placeholder: "Compose new project...", class: 'form-control' %>
					</div>
    				<p><%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"}%></p>


					</div>
					<hr>
					<%= f.submit "Update", class: "btn btn-success" %>

			<% end %>

	        </div>
             </div>
            </div>
</section>