<% provide(:title, "Log in") %>

<section id="registration" class="container">

          <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
              <div class="panel-body">
                  <h3 class="thin text-center">Log in to your account</h3>
                  <p class="text-center text-muted">Don't Have Account? <%= link_to "Register now!", signup_path %>  </p>
                  <hr>


                  <%= form_for(:session, url: login_path) do |f| %>
                    
                      <div class="top-margin">
                          <%= f.label :email %><span class="text-danger">*</span>
                          <%= f.email_field :email, class: 'form-control' %>
                      </div>

                      <div class="top-margin">
                          <%= f.label :password %>
                          <%= link_to "(forgot password)", new_password_reset_path %><span class="text-danger">*</span>

                        <%= f.password_field :password, class: 'form-control' %>
                      </div>




                      <hr>

                      <div class="row">
                          <div class="col-lg-8"> 
                          <%= f.label :remember_me, class: "checkbox inline" do %>
                          <%= f.check_box :remember_me %>
                          <span>Remember me on this computer</span>
                         <% end %>
                             
                          </div>
                          <div class="col-lg-4 text-right">           
                               <%= f.submit "Log in", class: "btn btn-success" %>
                          </div>
                      </div>
                  <% end %>

                </div>
               </div>
            </div>

</section><!--/#registration-->